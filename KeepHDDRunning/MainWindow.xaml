<Window x:Class="KeepHDDRunning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepHDDRunning"
        mc:Ignorable="d"
        Title="KeepHDDRunning" Height="205.731" Width="221.952" Background="{StaticResource WindowBackgroundBrush}">
    <Grid>
        <TextBlock Text="Select a drive" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,5,0,0"/>
        <ListBox x:Name="List_Drives" Margin="7,21,62.2,28" ItemsSource="{Binding DriveList}" ItemTemplate="{DynamicResource DriveItemTemplate}"/>
        <Button Content="Update" VerticalAlignment="Top" HorizontalAlignment="Right" Width="53" Margin="0,21,5,0" Click="Update_Click"/>
        <TextBlock Text="Interval :" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="7,0,0,7"/>
        <TextBox x:Name="TextBox_Interval" Text="5000" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="59,0,0,5"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Start" Margin="0,0,5.2,5" Width="52" Click="Start_Click" Height="26"/>
    </Grid>
</Window>
